		</dependency>

		<!-- Dependencies for dynamic layers -->
		<dependency>
			<groupId>org.geotools</groupId>
			<artifactId>gt-shapefile</artifactId>
		</dependency>
		<dependency>
			<groupId>org.geotools</groupId>
			<artifactId>gt-wms</artifactId>
		</dependency>
		
		
		<!-- Rewrite url's for geodesks -->
		<dependency>
			<groupId>org.tuckey</groupId>
			<artifactId>urlrewritefilter</artifactId>
		</dependency>

		<!-- javascript API -->
		<!-- <dependency> <groupId>org.geomajas.plugin</groupId> <artifactId>geomajas-plugin-javascript-api-gwt</artifactId> 
			</dependency> <dependency> <groupId>org.geomajas.plugin</groupId> <artifactId>geomajas-plugin-javascript-api</artifactId> 
			</dependency> -->		
		
		
		
