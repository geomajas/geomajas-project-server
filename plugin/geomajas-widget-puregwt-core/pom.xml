<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<groupId>org.geomajas</groupId>
		<artifactId>geomajas-parent</artifactId>
		<version>1.0.9</version>
	</parent>

	<groupId>org.geomajas.plugin</groupId>
	<artifactId>geomajas-widget-puregwt-core-all</artifactId>
	<version>1.0.0-M3</version>

	<name>geomajas-puregwt-widget-core plug-in parent</name>
	<description>geomajas-puregwt-widget-core plug-in grouping module</description>

	<!-- SCM information -->
	<scm>
		<connection>scm:svn:https://svn.geomajas.org/majas/tags/1.0.0-M3</connection>
		<developerConnection>scm:svn:https://svn.geomajas.org/majas/tags/1.0.0-M3</developerConnection>
		<url>http://ci.geomajas.org/svn/repos/Geomajas/list/tags/1.0.0-M3</url>
	</scm>

	<modules>
		<module>core</module>
		<module>documentation</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-backend</artifactId>
				<version>${widget-puregwt-core-backend-version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-face-puregwt</artifactId>
				<version>${widget-puregwt-core-puregwt-face-version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>

			<dependency>
				<groupId>org.geomajas.plugin</groupId>
				<artifactId>geomajas-widget-puregwt-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas.plugin</groupId>
				<artifactId>geomajas-widget-puregwt-core</artifactId>
				<classifier>sources</classifier>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<profiles>
		<profile>
			<id>documentation</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>documentation</module>
			</modules>
		</profile>
		<profile>
			<id>skipDocs</id>
			<activation>
				<property>
					<name>skipDocs</name>
				</property>
			</activation>
		</profile>
		<profile>
			<id>m2e</id>
			<activation>
				<property>
					<name>m2e.version</name>
				</property>
			</activation>
		</profile>
	</profiles>

	<properties>
		<widget-puregwt-core-backend-version>1.11.0</widget-puregwt-core-backend-version>
		<widget-puregwt-core-puregwt-face-version>1.0.0-M4</widget-puregwt-core-puregwt-face-version>
	</properties>

</project>
