	<dependencyManagement>
		<dependencies>
            <dependency>
            <groupId>org.geomajas.plugin</groupId>
            <artifactId>geomajas-server-plugin-rasterizing-all</artifactId>
            <version>${printing-rasterizing-version}</version>
            <type>pom</type>
            <scope>import</scope>
        </dependency>

            <dependency>
                <groupId>org.geomajas.plugin</groupId>
                <artifactId>geomajas-plugin-rasterizing</artifactId>
                <version>${printing-rasterizing-version}</version>
                <type>sources</type>
            </dependency>

			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-backend</artifactId>
				<version>${printing-backend-version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>

			<dependency>
				<groupId>org.geomajas.plugin</groupId>
				<artifactId>geomajas-plugin-print</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas.plugin</groupId>
				<artifactId>geomajas-plugin-print</artifactId>
				<version>${project.version}</version>
