<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="resource" type="org.geomajas.puregwt.client.widget.control.pan.PanControlResource" />

	<g:AbsolutePanel styleName="{resource.css.panControl}">
		<g:SimplePanel ui:field="topElement" styleName="{resource.css.panControlTop}" />
		<g:SimplePanel ui:field="rightElement" styleName="{resource.css.panControlRight}" />
		<g:SimplePanel ui:field="bottomElement" styleName="{resource.css.panControlBottom}" />
		<g:SimplePanel ui:field="leftElement" styleName="{resource.css.panControlLeft}" />
	</g:AbsolutePanel>

</ui:UiBinder> 