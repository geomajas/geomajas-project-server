<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="resource" type="org.geomajas.puregwt.client.widget.control.zoom.ZoomStepControlResource" />

	<g:AbsolutePanel styleName="{resource.css.zoomStepControl}">
		<g:SimplePanel ui:field="zoomInElement" styleName="{resource.css.zoomStepControlZoomIn}" />
		<g:AbsolutePanel ui:field="zoomStepsPanel" styleName="{resource.css.zoomStepControlSteps}" />
		<g:SimplePanel ui:field="zoomOutElement" styleName="{resource.css.zoomStepControlZoomOut}" />
		<g:SimplePanel ui:field="zoomHandle" styleName="{resource.css.zoomStepControlStepHandle}" />
	</g:AbsolutePanel>

</ui:UiBinder> 