<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:org.geomajas.puregwt.example.base.client.widget">

    <ui:with field='resource' type='org.geomajas.puregwt.example.base.client.resource.ShowcaseResource' />

    <ui:style>
        .banner {
        	margin-left: 10px;
        	margin-right: 10px;
        }
        
        .geomajas {
        	font-family: Arial;
        	font-size: 28px;
        	font-weight: bold;
        	text-shadow: #E0E0E0 0px 0px 15px;
        }
        
        .title {
        	text-align: right;
        	padding: 10px 20px 10px 20px;
        	font-size: 20px;
        	font-weight: bold;
        	font-family: Arial, Verdana;
        	color: #FFFFFF;
        }
        
        .contentPanel {
        	margin: 0px;
        }
    </ui:style>

    <g:DockLayoutPanel unit='PX' width="100%" height="100%">

		<g:north size="62">
			<w:Header />
		</g:north>
		
		<g:south size="24">
			<w:Footer />
		</g:south>

        <!-- Page layout -->
        <g:center>
            <g:SimpleLayoutPanel addStyleNames='{style.contentPanel}'>
                <g:SimpleLayoutPanel ui:field='contentPanel' width="100%" height="100%" />
            </g:SimpleLayoutPanel>
        </g:center>

    </g:DockLayoutPanel>

</ui:UiBinder> 