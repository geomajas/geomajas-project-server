<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resource' type='org.geomajas.gwt2.example.base.client.resource.ShowcaseResource' />

    <g:HTMLPanel width="100%" addStyleNames="{resource.css.sampleBlockPanel}">
        <div ui:field="titleElement" class="{resource.css.sampleBlockTitle}" />
        <div ui:field="descriptionElement" class="{resource.css.sampleBlockDescription}" />
        <div ui:field="categoryElement" class="{resource.css.sampleBlockCategory}" />
    </g:HTMLPanel>

</ui:UiBinder> 