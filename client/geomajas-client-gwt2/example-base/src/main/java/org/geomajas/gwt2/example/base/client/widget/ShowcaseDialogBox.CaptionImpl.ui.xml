<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:org.geomajas.gwt2.example.base.client.widget">

	<ui:with field="resource" type="org.geomajas.gwt2.example.base.client.resource.ShowcaseResource" />

	<ui:style>
		.caption {
			position: relative;
		}
		
		.closeBtn {
			float: right;
		}
	</ui:style>

	<g:HorizontalPanel width="100%">
		<g:HTMLPanel>
			<div ui:field="titleElement" style="float: left; font-size: 14px;" />
		</g:HTMLPanel>
		<w:ClickableImage ui:field="closeIcon" normalResource="{resource.iconClose}" hoverResource="{resource.iconCloseHover}"
			title="Close this sample and go back to the overview page." addStyleNames="{style.closeBtn}" />
	</g:HorizontalPanel>

</ui:UiBinder> 